{
  "manifest_version": 3,
  "name": "BrowserMingle",
  "version": "1.0.0",
  "description": "Discuss what you're browsing!",

  "action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab"
  ],

  "background": {
    "service_worker": "src/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "options_page": "src/options.html",
  
  "permissions": ["activeTab"]
}
